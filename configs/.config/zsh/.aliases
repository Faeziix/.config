# +------+
# | Misc |
# +------+

download() {
    if [[ $1 =~ ^https?://(www\.)?(youtube\.com|youtu\.be)/ ]]; then
        yt-dlp --format "bv*[ext=mp4]+ba[ext=m4a]/b[ext=mp4]" "$@"
    else
        gallery-dl -D . --cookies-from-browser firefox "$@"
    fi
}

alias download="download"
