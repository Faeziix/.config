# vim: filetype=sh
alias C="cd /home/faezix/.cache" \
	c='cd $(find /home/faezix/.config -maxdepth 1 | fzf) ' \
	dn="cd /home/faezix/Downloads" \
	dc="cd /home/faezix/Documents" \
	l="cd /home/faezix/.local" \
	h="cd /home/faezix" \
	w="cd /home/faezix/Work" \
	u='cd $(~/.scripts/cd_fzf.sh)' \
	tu='~/.scripts/udja_proj.sh' \
	uf="cd /home/faezix/Work/Udja/FrontEnd" \
	up="cd /home/faezix/Work/Udja/psightenginebackenddjango" \
	un="cd /home/faezix/Work/Udja/udja-nextjs" \
	uts="cd /home/faezix/Work/Udja/TS" \
	p="cd /home/faezix/Pictures" \
	vfz="$EDITOR /home/faezix/.config/zsh/.zshrc" \

alias shutdown='sudo shutdown now'
alias restart='sudo reboot'
alias suspend='sudo pm-suspend'

alias z='zathura'

# +----+
# | ls |
# +----+

alias ls="exa --color=auto"
alias l="exa -l"
alias ll="exa -lahF"
alias lls="exa -lahFtr"
alias la="exa -A"
alias lc="exa -CF"

# +----+
# | cp |
# +----+

alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'
alias la='ls -alh'

# +--------+
# | pacman |
# +--------+

alias pacman="sudo pacman --color auto"

alias sps='sudo pacman -S'               # install
alias spql='sudo pacman -Ql'             # Pacman Has Installed - what files where installed in a package
alias spss='sudo pacman -Ss'              # search
alias spsyu='sudo pacman -Syu'             # update
alias spr='sudo pacman -R'               # remove package but not dependencies
alias spsrs='sudo pacman -Rs'             # remove package with unused dependencies by other softwares
alias spsc='sudo pacman -Sc'             # remove pacman's cache
alias pacro='pacman -Rns $(pacman -Qtdq)'

alias unlock='rm /var/lib/pacman/db.lck'   # pacman remove locks

# +-------+
# | fonts |
# +-------+

alias fonts='fc-cache -f -v'

# +-----+
# | yay |
# +-----+

alias yayi='yay -S'     # install
alias yayhi='yay -Ql'   # Yay Has Installed - what files where installed in a package
alias yays='yay -Ss'    # search
alias yayu='yay -Syu'   # update
alias yayr='yay -R'     # remove package but not dependencies
alias yayrr='yay -Rs'   # remove package with unused dependencies by other softwares
alias yayrc='yay -Sc'   # remove yay's cache
alias yayls="yay -Qe"

# +-----+
# | Git |
# +-----+

alias gs='git status'
alias gss='git status -s'
alias ga='git add'
alias gp='git push'
alias gpraise='git blame'
alias gpo='git push origin'
alias gplo='git pull origin'
alias gb='git branch '
alias gc='git commit'
alias gd='git diff'
alias gco='git checkout '
alias gl='git log --pretty=oneline'
alias gr='git remote'
alias grs='git remote show'
alias glol='git log --graph --abbrev-commit --oneline --decorate'

# +------+
# | nvim |
# +------+

alias vim='nvim'
alias vi='nvim'
alias v='nvim'

#nvim for important configuration files
alias npacman="sudo $EDITOR /etc/pacman.conf"
alias ngrub="sudo $EDITOR /etc/default/grub"
alias nconfgrub="sudo $EDITOR /boot/grub/grub.cfg"
alias nsddm="sudo $EDITOR /etc/sddm.conf"
alias nsddmk="sudo $EDITOR /etc/sddm.conf.d/kde_settings.conf"
alias nz="$EDITOR $ZDOTDIR/.zshrc"
alias nenvironment="sudo $EDITOR /etc/environment"

alias nwaybar="$EDITOR $XDG_CONFIG_HOME/waybar/config.ctl"
alias nhypr="$EDITOR $XDG_CONFIG_HOME/hypr/hyprland.conf"
alias nhyprkeys="$EDITOR $XDG_CONFIG_HOME/hypr/keybindings.conf"
alias nnvim="$EDITOR $XDG_CONFIG_HOME/nvim/"
alias nkitty="$EDITOR $XDG_CONFIG_HOME/kitty/kitty.conf"
alias nlf="$EDITOR $XDG_CONFIG_HOME/lf/lfrc"
